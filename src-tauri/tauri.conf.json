{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "GNS Browser",
  "version": "1.0.0",
  "identifier": "com.gcrumbs.browser",
  "build": {
    "beforeDevCommand": "cd ../ui && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../ui && npm run build",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GNS Browser",
        "width": 420,
        "height": 800,
        "minWidth": 360,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:; connect-src 'self' https://api.gcrumbs.com https://app.gcrumbs.com wss://relay.gcrumbs.com",
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": [
      "resources/offline.html"
    ],
    "category": "Utility",
    "shortDescription": "Browse the Identity Web",
    "longDescription": "GNS Browser is your gateway to the decentralized identity web. Claim your @handle, send encrypted messages, and prove your humanity through proof-of-trajectory.",
    "copyright": "Â© 2024 Globe Crumbs",
    "iOS": {
      "minimumSystemVersion": "13.0",
      "developmentTeam": "YOUR_TEAM_ID",
      "frameworks": [],
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "GNS Protocol",
            "CFBundleURLSchemes": ["gns"]
          }
        ],
        "NSLocationWhenInUseUsageDescription": "GNS Browser collects your location to create cryptographic breadcrumbs that prove your identity.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "GNS Browser collects your location in the background to build your proof-of-trajectory for handle claims.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "minSdkVersion": 26,
      "targetSdkVersion": 34,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "INTERNET",
        "FOREGROUND_SERVICE"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "categories": ["android.intent.category.BROWSABLE", "android.intent.category.DEFAULT"],
          "data": {
            "scheme": "gns"
          }
        }
      ]
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist",
      "exceptionDomain": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "http": {
      "enabled": true,
      "scope": [
        "https://api.gcrumbs.com/*",
        "https://app.gcrumbs.com/*",
        "https://*.gcrumbs.com/*"
      ]
    },
    "notification": {
      "enabled": true
    }
  }
}
